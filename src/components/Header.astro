<header class="header">
  <nav class="nav">
    <div class="nav-container">
      <a href="/" class="logo">
        <h2>MiEmpresa</h2>
      </a>
      
      <ul class="nav-menu">
        <li><a href="/">Inicio</a></li>
        <li><a href="/productos">Productos</a></li>
        <li><a href="/servicios">Servicios</a></li>
        <li><a href="/nosotros">Nosotros</a></li>
        <li><a href="/contacto">Contacto</a></li>
      </ul>
    </div>
  </nav>
</header>

<style>
  .header {
    background: #fff;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo h2 {
    color: #2563eb;
    margin: 0;
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
  }
  
  .nav-menu a {
    text-decoration: none;
    color: #333;
    font-weight: 500;
    transition: color 0.3s;
    position: relative;
  }
  
  .nav-menu a:hover {
    color: #2563eb;
  }
  
  /* Active page indicator */
  .nav-menu a.active {
    color: #2563eb;
  }
  
  .nav-menu a.active::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    right: 0;
    height: 2px;
    background: #2563eb;
  }
  
  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
    }
    
    .nav-menu {
      gap: 1rem;
    }
    
    .nav-menu a {
      font-size: 0.9rem;
    }
  }
  
  @media (max-width: 480px) {
    .nav-menu {
      gap: 0.5rem;
    }
    
    .nav-menu a {
      font-size: 0.8rem;
    }
  }
</style>